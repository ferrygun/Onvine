#!/usr/bin/env ruby

NOISE_SAMPLE_RATE = 0.02
RECORD_RATE_SECONDS = 1

while true
  sample_rate_info = `/usr/bin/arecord -D plughw:1,0 -d #{RECORD_RATE_SECONDS} -f cd > sample.wav && /usr/bin/sox -t .wav sample.wav -n stat 2>&1 | grep norm`
  `rm sample.wav`

  mean_sample_rate = sample_rate_info.split[2].to_f
  print mean_sample_rate
  if mean_sample_rate > NOISE_SAMPLE_RATE
    system "/home/pi/miri/bin/miri"
  end
end
